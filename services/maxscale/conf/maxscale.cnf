[maxscale]
threads              = auto
log_augmentation     = 1
ms_timestamp         = 1
syslog               = 1
admin_host           = 0.0.0.0
admin_port           = 58989
admin_auth           = 1
admin_enabled        = 1
admin_secure_gui     = false
connect_timeout      = 60        # max time to establish connection to server
read_timeout         = 600       # max idle read time (matches MariaDB wait_timeout)
write_timeout        = 600       # max idle write time
max_packet_size      = 524288000 # 500 MB to match MariaDB max_allowed_packet
client_idle_timeout  = 0         # disable client idle disconnect
server_idle_timeout  = 0         # disable server idle disconnect

########################
# Server list
########################
[server1]
type              = server
address           = mariadb_master
port              = 3301
protocol          = MariaDBBackend
ssl               = true
ssl_cert          = /etc/maxscale/tls/client-cert.pem
ssl_key           = /etc/maxscale/tls/client-key.pem
ssl_ca            = /etc/maxscale/tls/ca-cert.pem

[server2]
type              = server
address           = mariadb_slave1
port              = 3302
protocol          = MariaDBBackend
ssl               = true
ssl_cert          = /etc/maxscale/tls/client-cert.pem
ssl_key           = /etc/maxscale/tls/client-key.pem
ssl_ca            = /etc/maxscale/tls/ca-cert.pem


#########################
# Monitor for the servers
#########################
[MariaDB-Monitor]
type              = monitor
module            = mariadbmon
servers           = server1,server2
user              = max_usr
password          = MAXSCALE_PASSWORD_SET
auto_failover     = 1
auto_rejoin       = true
failcount         = 5
verify_master_failure    = true
enforce_read_only_slaves = 1


#########################
# Filters
#########################
#[dbfw-blacklist]
#type              = filter
#module            = dbfwfilter
#action            = block
#rules             = /etc/maxscale/blacklist-rules.txt
#treat_string_arg_as_field  = false
#treat_string_as_field      = false


#########################
# Service definitions
#########################
[Read-Write-Service]
type              = service
router            = readwritesplit
servers           = server1,server2
user              = max_usr
password          = MAXSCALE_PASSWORD_SET
#filters           = dbfw-blacklist


##########################
# Listener definitions
##########################
[Read-Write-Listener]
type              = listener
service           = Read-Write-Service
protocol          = MariaDBClient
port              = MAXSCALE_PORT_SET
ssl               = true
ssl_cert          = /etc/maxscale/tls/maxscale-cert.pem
ssl_key           = /etc/maxscale/tls/maxscale-key.pem
ssl_ca            = /etc/maxscale/tls/ca-cert.pem
ssl_verify_peer_certificate = true
